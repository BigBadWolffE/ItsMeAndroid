            android:name=".view.billing.activity.BillingActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".view.inbox.InboxActivity" />
        <activity
            android:name=".view.notification.activity.NotificationActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".view.inbox.InboxActivity" />
