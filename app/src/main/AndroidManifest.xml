<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.indocyber.itsmeandroid">

    <permission
        android:name="android.permission.CALL_PRIVILEGED"
        android:protectionLevel="signature|privileged" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:node="replace" />

    <application
        android:name=".view.App"
        android:allowBackup="true"
        android:allowClearUserData="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        android:vmSafeMode="true"
        tools:ignore="GoogleAppIndexingWarning,LockedOrientationActivity">
        <activity android:name=".viewremastered.morecard.MoreCardRemasteredActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".viewremastered.promo.Activity.PinPromoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".viewremastered.loginandregister.LoginAuthActivityRemastered"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".viewremastered.loginandregister.RegisterActivityRemastered"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".viewremastered.loginandregister.LoginActivityRemastered"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".viewremastered.home.activity.HomeRemastered"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.forgotpassword.activity.ForgotPasswordActivity"
            android:parentActivityName=".view.login.LoginOptionActivity" />
        <activity
            android:name=".view.promo.activity.PromoDetailActivity"
            android:parentActivityName=".view.promo.activity.PromoActivity" />
        <activity
            android:name=".view.aboutus.activity.AboutUsActivity"
            android:parentActivityName=".view.home.activity.HomeActivity" />
        <activity android:name=".view.blockallconfirmation.BlockAllConfirmationActivity" />
        <activity
            android:name=".view.editcreditcard.EditCreditCardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.addmembership.AddMembershipActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".view.contactcc.activity.ContactCCActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".view.blockcc.activity.BlockCCActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".view.membershipsecuritycode.MembershipSecurityCodeActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".view.editcardsecuritycode.EditCardSecurityCodeActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".view.blockconfirmationpin.BlockConfirmationPinActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.notificationdetail.NotificationDetail"
