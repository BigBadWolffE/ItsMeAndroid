<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".view.forgotpassword.activity.ForgotPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/logoitsmewhite" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/spacing_xxlarge"
        android:paddingLeft="@dimen/spacing_xxlarge"
        android:paddingRight="@dimen/spacing_xxlarge"
        android:background="@drawable/bgcardlayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_xxlarge"
            android:orientation="vertical">

            <TextView
                style="@style/primaryFontLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-mail Address or Phone Number"
                android:textColor="#5D5D5D" />

            <EditText
                android:id="@+id/txtEmailForgotPass"
                style="@style/primaryFontBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email or Phone Number"
                android:maxLines="1"
                android:lines="1"
                android:scrollHorizontally="true"
                android:ellipsize="end"
                android:inputType="text"
                android:textColor="@color/black" />

            <!--editext password-->

            <Button
                android:id="@+id/btnForgotPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textAllCaps="false"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:fontFamily="@font/interstate_regular"
                android:background="@drawable/btn_rounded_primary"
                android:text="Submit"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>