<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".view.notificationdetail.NotificationDetail">

    <LinearLayout
        android:id="@+id/llNotificationDetail"
        android:orientation="vertical"
        android:paddingTop="26dp"
        android:paddingBottom="16dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/bgcardlayout" >

        <TextView
            android:id="@+id/txtNotificationTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/primaryFontBold"
            android:textColor="@color/primary_font_color"
            android:text="Title" />

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/txtNotificationDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/primaryFont"
            android:textColor="#B4B4B4"
            android:text="11 November 2019, 08:00"
            android:textSize="12dp" />

        <TextView
            android:layout_marginTop="16dp"
            android:id="@+id/txtNotificationMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="5"
            style="@style/primaryFontBold"
            android:textColor="@color/primary_font_color"
            android:text="Sisa limit Credit Card Master Anda:\n9894 xxxx xxxx 9800:\nRp 2.000.000.0000"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>