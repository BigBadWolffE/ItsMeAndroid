<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/alert_dialog_width"
    android:background="@drawable/bgalertlayout"
    android:layout_gravity="center"
    android:padding="16dp"
    android:layout_height="@dimen/alert_dialog_height">

    <TextView
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/primaryFontLight"
        android:textSize="14sp"
        android:textColor="@color/primary_font_color"
        android:text="Please enter this document's password."/>

    <EditText
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="12dp"
        android:id="@+id/txtAttachmentPassword"
        style="@style/primaryFontBold"
        android:textSize="18sp"
        android:maxLength="20"
        android:padding="8dp"
        android:background="@drawable/bgpasswordinput"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btnPasswordSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/primaryFontBold"
        android:stateListAnimator="@null"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:background="@drawable/btn_rounded_primary"
        android:text="Submit" />


</LinearLayout>