<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewremastered.promo.Activity.PinPromoActivity">

    <LinearLayout
        android:id="@+id/imgBackgroundTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/img_bg_top"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblPin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_bold"
        android:text="@string/text_pin"
        android:textSize="@dimen/_20sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgBackgroundTop" />

    <LinearLayout
        android:id="@+id/layoutPin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/lblPin">

        <EditText
            android:id="@+id/txtPin1"
            style="@style/primaryFont"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            android:textColor="@color/primary_font_color"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/txtPin2"
            style="@style/primaryFont"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            android:textColor="@color/primary_font_color"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/txtPin3"
            style="@style/primaryFont"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            android:textColor="@color/primary_font_color"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/txtPin4"
            style="@style/primaryFont"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            android:textColor="@color/primary_font_color"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/txtPin5"
            style="@style/primaryFont"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            android:textColor="@color/primary_font_color"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/txtPin6"
            style="@style/primaryFont"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            android:textColor="@color/primary_font_color"
            android:textSize="40sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnKonfirmasi"
        style="@style/primaryFont"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/btn_rounded_blue"
        android:stateListAnimator="@null"
        android:fontFamily="@font/quicksand_bold"
        android:text="KONFIRMASI"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>