<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ShareDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/bgcardlayout</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="NavigationViewStyle">
        <item name="android:textSize">20sp</item> <!-- menu item text size-->
        <item name="android:listPreferredItemPaddingLeft">40dp</item><!-- menu item height-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolBarStyle" parent="ToolBarStyle.Base" />

    <style name="ToolBarStyle.Base" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="ToolBarStyle.Event" parent="ToolBarStyle">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.Event.Toolbar.Title</item>
    </style>

    <style name="TextAppearance.Widget.Event.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--Any text styling can be done here-->
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80FFFFFF</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

    <style name="CreditCardTextStyle">
        <item name="android:fontFamily">@font/andale_mono</item>
        <item name="android:textColor">@color/colorwhite</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="primaryFont">
        <item name="android:fontFamily">@font/interstate_regular</item>
        <item name="android:textColor">@color/colorwhite</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="primaryFontLight">
        <item name="android:fontFamily">@font/interstate_light</item>
        <item name="android:textColor">@color/colorwhite</item>
        <item name="android:textSize">14dp</item>
        <item name="android:padding">@dimen/spacing_small</item>
    </style>

    <style name="primaryFontBold">
        <item name="android:fontFamily">@font/interstate_bold</item>
        <item name="android:textColor">@color/colorwhite</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="spinnerText" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/quicksand_semibold</item>
        <item name="android:textColor">@color/support_black</item>
        <item name="android:textSize">14dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="textReg18BoldBlack">
        <item name="android:fontFamily">@font/interstate_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="textReg16BoldBlack">
        <item name="android:fontFamily">@font/interstate_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="textReg14Grey">
        <item name="android:fontFamily">@font/interstate_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey2</item>
    </style>

    <style name="textReg14Black">
        <item name="android:fontFamily">@font/interstate_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="textReg16Black">
        <item name="android:fontFamily">@font/interstate_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="textReg14BoldPrimary">
        <item name="android:fontFamily">@font/interstate_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="textReg20BoldPrimary">
        <item name="android:fontFamily">@font/interstate_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="textReg14BoldBlack">
        <item name="android:fontFamily">@font/interstate_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="textReg14BoldRed">
